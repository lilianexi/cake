/* miniprogram/pages/cartList/cartList.wxss */
.top{margin: 0 auto;text-align: center}
.top image{
  width:50%;
  height:50rpx;
  }
.top text{
  display: block;
  font-size:15px
}
.title{width:150rpx;}
.content{
  margin:10px;
  display: flex;
  justify-content: space-around;
  font-size: 15px;
  align-items: center;
  
}
.content checkbox{
  width:30rpx;
  height:30rpx
}
.content image{
  width:80rpx;
  height:80rpx
}
.content text{
  display: block;
  margin-top:20rpx;
  text-align: center;
  font-size: 15px

}
.content .btn{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top:20rpx
}
.content .btn input{
  display: block;
  margin-top:20rpx;
  width:25rpx;
  border: none;
  text-align: center;
  }
.content .btn button{
  margin:0 5rpx;
  border:0; 
  font-size:20px;
  text-align: top;
  padding:0 0.5em
  }
.btn view{ 
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  text-align: center;
  font-size:20px
  }
  .bottom{
    position: fixed;
    bottom:0;
    width:100%;
    background:#aaa;
    height:100rpx;
    display: flex;
    justify-content: space-around;
    align-items: center
  }
  .bottom button{
    margin-right:0
  }
