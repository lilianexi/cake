.content image{
  width:100%
}
.content {
  text-align: left;
  font-size: 15px
}
.content text{
  display: block
}
.content .title{
  color:rgb(226, 79, 21);
  font-size: 20px;
  display: block;
  margin:10rpx
}
.content .price{
  margin:20rpx 10rpx
}
.content .weight{
  display: flex;
  justify-content: flex-start;
  text-align: center
}
.content .weight text{
  width:80rpx;
  height:50rpx;
  background:rgba(214, 211, 211, 0.158);
  margin:20rpx 10rpx
}
.content .btn{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;

}
.content .btn input{
  display: block;
  margin-top:20rpx;
  width:20rpx;
  border: none;
  text-align: center;
  }
  .content .btn text{display: block;
  margin-top:20rpx;}
.content .btn button{margin:0 10rpx;border:0; font-size:20px;text-align: top}
.btn view{ 
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  text-align: center;
  font-size:20px
  }
  .toBuy{
    width:100%;
    position: fixed;
    bottom:0;
    display: flex;
    justify-content: center
  }
  .toBuy button{
    width:50%;
    padding: 0 20rpx
  }